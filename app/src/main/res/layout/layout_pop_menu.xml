<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_operate_window">
    <LinearLayout
        android:id="@+id/layout_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/red_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#f00"/>

        <TextView
            android:id="@+id/blue_color"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#00f"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/selectable_delete"
            style="@style/OperateTextView"
            android:text="删除"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@id/layout_up">
        <TextView
            android:id="@+id/tv_note"
            style="@style/OperateTextView"
            android:text="笔记"/>

        <TextView
            android:id="@+id/tv_copy"
            style="@style/OperateTextView"
            android:text="@string/copy"/>

        <TextView
            android:id="@+id/tv_select_all"
            style="@style/OperateTextView"
            android:text="@string/select_all"/>
    </LinearLayout>

</RelativeLayout>